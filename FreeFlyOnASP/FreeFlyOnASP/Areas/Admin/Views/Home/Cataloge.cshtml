
@{
    ViewBag.Title = "Cataloge";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Cataloge for Admin</h2>

<div>
    <h3>Книги</h3>
    <table>
        <tr>
            <td><p>Название книги</p></td>
            <td><p>Автор</p></td>
            <td><p>Цена</p></td>
            <td></td>
        </tr>
        @foreach (var b in ViewBag.Books)
        {
            <tr>    
                <td><p> @b.Name </p></td>
                <td><p> @b.Author </p></td>
                <td><p> @b.Price </p></td>  
                <td><p>@Html.ActionLink("Купить","Buy", new { id = @b.Id })</p></td>
            </tr>
        }
    </table>
</div>